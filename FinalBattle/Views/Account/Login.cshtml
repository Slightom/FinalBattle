@using FinalBattle.Models
@model LoginViewModel
@{
    ViewBag.Title = "Logowanie";
}


<div class="row homeRow">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <h2>@ViewBag.Title</h2>
        @if (ViewBag.Info != null)
        {
            <h3>
                @ViewBag.Info
                @Html.ActionLink("Wyloguj", "LogOff", "Account", routeValues: null, htmlAttributes: null)
            </h3>
        }
            <section id="loginForm">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, null, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(m => m.Nick, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Nick, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Nick, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-2 control-label">Hasło</div>
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <div class="checkbox">
                                @Html.CheckBoxFor(m => m.RememberMe)
                                <div style="margin-top: 7px;">Zapamiętać hasło?</div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Zaloguj" class="btn btn-success" />
                        </div>
                    </div>
                    <p>
                        @Html.ActionLink("Nie masz jeszcze konta? - Zarejestruj się", "Register")
                    </p>
                    <p>
                        @Html.ActionLink("Zapomniałeś hasła?", "ForgotPassword")
                    </p>
                }
            </section>
    </div>
    <div class="col-md-3"></div>
</div>
