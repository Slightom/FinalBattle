@model IEnumerable<FinalBattle.Models.Photo>

<div class="row" style="margin-bottom: 15px">
    
    @ViewBag.filePath;
    @{ 
        int i = 0;
    }
    @for (i = 0; i < Model.Count(); i++)
    {
        if (i != 0 && i % 4 == 0)
        {
                @:</div>
                @:<div class="row" style="margin-bottom: 15px">
            }

        <div class="col-md-3">
            <div class="thumbnail">
                <a href="@Model.ElementAt(i).Path" data-lightbox="gallery">
                    <img src="@Model.ElementAt(i).Path" />
                </a>
            </div>
            <button class="btn btn-danger" type="button" r onclick="DeletePhotoClicked(@Model.ElementAt(i).PhotoID)">Usuń zdjęcie</button>
        </div>
    }
    @if (i != 0 && i % 4 == 0)
    {
        @:</div>
        @:<div class="row" style="margin-bottom: 15px">
    }
              <div class="col-md-3">
                  <div class="thumbnail" style="text-align: center !important; line-height: 100px; background-color: rgba(255,255,51,1) !important; margin: 24px;">
                      <button class="btn btn-success" type="button" onclick="AddPhotoClicked()" style="font-size: 20px;">Dodaj zdjęcie</button>
                  </div>
              </div>
</div>

