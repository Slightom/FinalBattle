@model IEnumerable<FinalBattle.Models.Backing>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="homeRow">
    <p>
        @ViewBag.filePath
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table table-hover table-bordered" style="text-align:center">
        <tr style="border: solid 1px white;">
            <th>
                @Html.Label("SongTitle")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BackingStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Path)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MainBacking)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Song.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BackingStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Path)
                </td>
                <td>                 
                    <label class="container2">
                        @Html.DisplayFor(modelItem => item.MainBacking)
                        <span class="checkmark"></span>
                    </label>
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.BackingID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.BackingID })
                </td>
            </tr>
        }

    </table>
</div>